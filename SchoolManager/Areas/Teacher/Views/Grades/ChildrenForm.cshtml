@model StudentListViewModel

@{
	ViewData["Title"] = "Add a mark to a student";
}


<table class="table table-bordered">
	<thead>
		<tr>
			<th>
				Student Name
			</th>
			<th>
				Marks
			</th>
			<th>
				Add a mark
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var student in Model.Students)
		{
			<tr>
				<th>
					@student.FullName
				</th>
				<th>
					@{
						string mark = string.Join(", ", student.Marks);
					}
					<div class="row">
						@mark
					</div>
				</th>
				<th>
					<form asp-action="AddMark" method="post">
						<div class="row" style="width: 100%">
							<input type="hidden" name="StudentId" value="@student.Id" />
							<input type="hidden" name="Subject" value="@Model.Subject" />
							<div class="col-md-5">
								<select name="Mark" asp-items="Model.Marks" class="form-control"></select>
							</div>
							<div>
								<input class="btn btn-sm btn-primary" type="submit" value="Save" />
							</div>
						</div>
					</form>
				</th>
			</tr>
		}
	</tbody>
</table>