@model AddClassFormModel

@{
	ViewData["Title"] = "Create Class";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="All" class="text-danger"></div>

			<div class="form-group">
				<label asp-for="Grade"></label>
				<input asp-for="Grade" class="form-control" />
				<span asp-validation-for="Grade" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Letter"></label>
				<input asp-for="Letter" class="form-control" /> 
				<span asp-validation-for="Letter" class="text-danger"></span>
			</div>
			
			<button type="submit" class="btn btn-default">Add Course</button>
		</form>
	</div>
</div>


@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}